<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="8dp"
    android:foreground="?android:attr/selectableItemBackgroundBorderless"
    android:clickable="true"
    android:focusable="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="176dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingBottom="8dp">



        <TextView
            android:id="@+id/drive_name"
            style="@style/CardLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/drive_status"
            style="@style/CardLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Status"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/drive_name" />


        <TextView
            android:id="@+id/drive_phone_no"
            style="@style/CardLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="contact"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/drive_status" />


        <TextView
            android:id="@+id/drive_email"
            style="@style/CardLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Email"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/drive_phone_no" />

        <TextView
            android:id="@+id/drive_action"
            style="@style/CardLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Action"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/drive_email" />

        <TextView
            android:id="@+id/drive_nameE"
            style="@style/CardInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="28dp"
            app:layout_constraintStart_toEndOf="@id/drive_phone_no"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Harshit Khurana" />


        <TextView
            android:id="@+id/drive_statusE"
            style="@style/CardInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="28dp"
            android:layout_marginTop="4dp"
            app:layout_constraintStart_toEndOf="@id/drive_phone_no"
            app:layout_constraintTop_toBottomOf="@+id/drive_nameE"
            tools:text="Reached" />

        <TextView
            android:id="@+id/drive_phone_noE"
            style="@style/CardInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="28dp"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toEndOf="@id/drive_phone_no"
            app:layout_constraintTop_toBottomOf="@+id/drive_statusE"
            tools:text="8958170034" />

        <TextView
            android:id="@+id/drive_emailE"
            style="@style/CardInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="28dp"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toEndOf="@id/drive_phone_no"
            app:layout_constraintTop_toBottomOf="@+id/drive_phone_noE"
            tools:text="asdfgh.gmail.com4" />

        <com.github.ivbaranov.mli.MaterialLetterIcon
            android:id="@+id/letterIcon"
            android:layout_width="37dp"
            android:layout_height="64dp"
            app:layout_constraintDimensionRatio="1:1"
            android:layout_marginStart="28dp"
            android:layout_marginTop="20dp"
            app:layout_constraintStart_toEndOf="@id/drive_phone_no"
            app:layout_constraintTop_toBottomOf="@+id/drive_phone_noE"
            app:mli_letter="A"
            app:mli_letter_color="#ffffff"
            app:mli_shape_color="@color/colorAccent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/iconColor"
        android:alpha="0.25"/>
</LinearLayout>